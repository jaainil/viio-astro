<style>
  .marquee {
    padding: 2rem 0;
    padding-bottom: 0;
    z-index: 9;
  }

  .stats {
    margin: 8rem 0;
    padding: 4rem 0;
    background: var(--color-brand-3);
    position: relative;
    overflow: hidden;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;

    @media (--mq-tablet) {
      grid-template-columns: repeat(2, 1fr);
    }

    @media (--mq-phone) {
      grid-template-columns: 1fr;
    }
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-number {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    font-family: var(--font-heading);
  }

  .stat-plus {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
  }

  .stat-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-alt);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .team {
    margin: 8rem 0;
  }

  .team-title {
    --fs: 3rem;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .team-subtitle {
    text-align: center;
    margin-bottom: 4rem;
    color: var(--color-text-alt);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;

    @media (--mq-desktop-sm) {
      grid-template-columns: repeat(2, 1fr);
    }

    @media (--mq-phone) {
      grid-template-columns: 1fr;
    }
  }

  .team-card {
    background: var(--color-bg-alt);
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    transition: transform 0.3s var(--ease-out-cubic);

    &:hover {
      transform: translateY(-0.5rem);
    }
  }

  .team-image {
    width: 120px;
    height: 120px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    overflow: hidden;
    background: var(--color-brand-3);
  }

  .team-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-brand-1);
  }

  .team-name {
    font-size: var(--font-size-lg);
    margin-bottom: 0.25rem;
  }

  .team-role {
    font-size: var(--font-size-sm);
    color: var(--color-brand-1);
    display: block;
    margin-bottom: 1rem;
  }

  .team-bio {
    font-size: var(--font-size-xs);
    color: var(--color-text-alt);
    line-height: 1.6;
  }
</style>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const stats = document.querySelectorAll('.stat-number');
  stats.forEach((stat) => {
    const target = parseInt(stat.getAttribute('data-count') || '0');
    gsap.to(stat, {
      innerHTML: target,
      duration: 2,
      snap: { innerHTML: 1 },
      scrollTrigger: {
        trigger: stat,
        start: "top 80%",
      }
    });
  });
</script>
